@model GitHubInformation
@{
	Layout = null;
}

<html>

<head>

	@** Style design by our friend @programwithdan **@
	<style>

		body { margin: 5px 0px; }

		.marquee {
			margin: 0 auto;
			white-space: nowrap;
			overflow: hidden;
			position: absolute;
			padding: 10px 0px;
			color: #000;
			width:100%;
		}

		.marquee span {
			display: inline-block;
			padding-left: 100%;
			animation: marquee 40s linear infinite;
		}

		@@keyframes marquee {
			0% {
				transform: translate(0, 0);
			}
			100% {
				transform: translate(-100%, 0);
			}
		}


	</style>

</head>
<body>

<p class="marquee">

	<span>

		<u>Top week:</u>
@if (Model.TopWeekContributors.Count() == 0) {
	@:No contributors this week
} else {

	@Html.Partial("_ContributorTickerSegment", Model.TopWeekContributors)

}

<u>Top month:</u>

@Html.Partial("_ContributorTickerSegment", Model.TopMonthContributors)

<u>Top All Time:</u>

@Html.Partial("_ContributorTickerSegment", Model.TopEverContributors)

	</span>

</p>

</body>
</html>
